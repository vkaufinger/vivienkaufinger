<section class="skills  list-section  js-list" data-speed="0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12  col-sm-offset-1  col-sm-10  col-md-10  col-lg-offset-2  col-lg-8">
                <h2 class="title">
                    {{- 'Skills' -}}
                </h2>
                <ul class="list  list--separators  row">
                    <li class="col-xs-6  col-sm-4">
                        {% for skill in data.skills|slice(0, 3) %}
                            <div class="list__item  list__item--{{ loop.index }}">
                                <span class="js-list-item">{{- skill -}}</span>
                            </div>
                        {% endfor %}
                    </li>
                    <li class="col-xs-6  col-sm-4">
                        {% for skill in data.skills|slice(3, 3) %}
                            <div class="list__item  list__item--{{ loop.index + 3 }}">
                                <span class="js-list-item">{{- skill -}}</span>
                            </div>
                        {% endfor %}
                    </li>
                    <li class="col-xs-12  col-sm-4">
                        <div class="row">
                            {% for skill in data.skills|slice(6, 3) %}
                                <div class="col-xs-6  col-sm-12  list__item  list__item--{{ loop.index + 6 }}">
                                    <span class="js-list-item">{{- skill -}}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
