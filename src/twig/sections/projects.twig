<section class="projects">
    <div class="container-fluid">
        <h2 class="invisible">
            {{- 'Selected projects' -}}
        </h2>
        <div class="projects__list">
            {% for project in data.projects %}
                <article class="project  row  center-xs  middle-xs">
                    <div class="project__inner  col-xs-12">
                        <header class="project__header" data-speed="-0.25">
                            <h3 class="project__title">
                                <a href="{{ project.url }}" target="_blank">
                                    {{- project.title -}}
                                </a>
                            </h3>
                            <div class="project__cta">
                                <a class="project__cta-link" href="{{ project.url }}" target="_blank">
                                    {{- 'Visit the website' -}}
                                </a>
                            </div>
                        </header>
                        <div class="project__poster">
                            <div class="project__poster-wrapper">
                                <div class="project__poster-inner">
                                    <img class="project__poster-img" src="{{ project.poster }}" alt="{{- project.title -}}">
                                    <div class="project__poster-shadow" style="box-shadow: 0 0 100px 70px {{ project.color }};"></div>
                                </div>
                            </div>
                        </div>
                        <ul class="project__infos  row  end-xs">
                            <li class="project__infos-item  col-xs-12">
                                {{- project.client -}}
                            </li>
                            <li class="project__infos-item  col-xs-12">
                                {{- project.description -}}
                            </li>
                            <li class="project__infos-item  col-xs-12">
                                {{- '@' ~ project.team ~Â ' - ' ~ project.year -}}
                            </li>
                        </ul>
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
</section>
